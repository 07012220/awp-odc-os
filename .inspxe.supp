# @section DESCRIPTION
# Suppressions for Intel Inspector XE.
##

##
# Dynamic linker
##
suppression = {
  type = {thread_start}
  stacks = {
    {
      !!!;
      func=_start,mod=ld-linux-x86-64.so.2;
    }
  }
}

##
# Suppress posix_memalign memleak
##
suppression = {
  type = {unreachable_memory_leak}
  stacks = {
    allocation={
      !!!;
      func=GenericGridBase,mod=pmcl3d,src=generic_grids.hpp;
    }
  }
}

##
# Suppress not deleting after new (generated code)
##
suppression = {
  type = {unreachable_memory_leak}
  stacks = {
    allocation={
      !!!;
      func=allocGrids,mod=pmcl3d,src=stencil_code.hpp;
    }
  }
}
suppression = {
  type = {unreachable_memory_leak}
  stacks = {
    allocation={
      !!!;
      func=allocParams,mod=pmcl3d,src=stencil_code.hpp;
    }
  }
}

##
# Suppress numa_alloc_onnode memleak (needs to be freed?)
